<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <!-- Teks Judul Aplikasi -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplikasi Kasir Sederhana"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Spinner untuk Memilih Item -->
    <Spinner
        android:id="@+id/itemSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemLabel"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <!-- Teks Label Pilih Item -->
    <TextView
        android:id="@+id/itemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Item:"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:layout_below="@id/appTitle"/>

    <!-- Teks Label Harga per Item -->
    <TextView
        android:id="@+id/itemPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harga per Item: "
        android:layout_below="@id/itemSpinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>

    <!-- Teks Nilai Harga per Item -->
    <TextView
        android:id="@+id/itemPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemSpinner"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/itemPriceLabel"
        android:textSize="20sp"/>

    <!-- Teks Label Biaya Admin -->
    <TextView
        android:id="@+id/adminFeeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biaya Admin:"
        android:layout_below="@id/itemPriceLabel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>

    <!-- Teks Nilai Biaya Admin -->
    <TextView
        android:id="@+id/adminFeeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemPriceLabel"
        android:layout_marginTop="20dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/adminFeeLabel"
        android:textSize="20sp"/>

    <!-- Radio Button untuk Membership ( 5% Diskon ) -->
    <RadioButton
        android:id="@+id/membershipRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Membership ( 5% )"
        android:layout_below="@id/adminFeeValue"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>

    <!-- Radio Button untuk Non-Membership -->
    <RadioButton
        android:id="@+id/nonMembershipRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Non-Membership"
        android:layout_below="@id/membershipRadioButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>

    <!-- Tombol untuk Proses -->
    <Button
        android:id="@+id/processButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:layout_below="@id/nonMembershipRadioButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>

    <!-- Teks untuk Menampilkan Nota -->
    <TextView
        android:id="@+id/receiptTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/processButton"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>


</RelativeLayout>
